<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Views/_Layout.css" />
    <title>@ViewBag.Title - Seguimiento COVID19</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <script type="text/javascript">
        var loadingDiv = (function () {
            "use strict";
            var that = {};
            that.show = function () {
                $('#loading').show();
            };
            that.hide = function () {
                $('#loading').hide();
            };
            return that;
        }());
    </script>
</head>
<body>
    <div id="loading">
        <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top" id="banner">
        <div class="navbar-header">
            <a class="navbar-logo">
                <span id="logo" class="text-center"><img src="~/Images/logopqp.png" height="30" /></span>
                <a href="~/" class="navbar-brand">Seguimiento COVID19</a>
                @*@Html.ActionLink("| Seguimiento COVID19", "Index", "Login", new { @class = "navbar-brand" })*@
                <li class="dropdown navbar-brand">
                    <a class="dropbtn">Menú</a>
                    <div class="dropdown-content" id="divMenu">
                        @*<a href="~/Persona/Index">Registrar temperatura</a>*@
                        @*<a id="hasPermission" href="~/Respuestas/AdminHome">Reporte general</a>*@
                    </div>
                </li>
            </a>
        </div>
        <a href="~/Login/Index" id="lblSession" class="navbar-brand" style="float:right">Iniciar Sesión</a>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="navbar-inverse">
        <br /><br />
        <p>&copy; @DateTime.Now.Year - Productos Químicos Panamericanos. Todos los Derechos Reservados.</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Views/_Layaout.js" type="text/javascript"></script>
</body>
</html>
